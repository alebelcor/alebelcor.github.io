<article class="<%= item.layout %>">
  <% if (item.photos) { %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <% if (item.layout != 'page') { %>
        <div class="icon"></div>
        <time datetime="<%= item.date.toDate().toISOString() %>">
          <%= item.date.format(config.date_format) %>
        </time>
      <% } %>
      <%- partial('post/title') %>
    </header>
    <div class="entry">
      <% if (item.excerpt && index) { %>
        <%- item.excerpt %>
      <% } else { %>
        <% if (!index && item.layout != 'page') { %>
          <%- partial('post/share') %>
        <% } %>
        <%- item.content %>
      <% } %>
    </div>
    <footer>
      <% if (index) { %>
        <% if (item.excerpt) { %>
          <div class="alignleft">
            <a href="<%- config.root %><%- item.path %>" class="more-link"><%= theme.excerpt_link %></a>
          </div>
        <% } %>
        <% if (item.comment && config.disqus_shortname) { %>
        <div class="alignright">
          <a href="<%- item.permalink %>#disqus_thread" class="comment-link">Comments</a>
        </div>
        <% } %>
      <% } else { %>
        <%- partial('post/category') %>
        <%- partial('post/tag') %>
      <% } %>
      <div class="clearfix"></div>
    </footer>
  </div>
</article>

<%- partial('comment') %>
